{
    "app_name": "CuckooNest",
    "version": "1.0.0",
    "debug_mode": true,
    "max_screens": 10,
    "refresh_rate": 60.0,
    "display": {
        "width": 320,
        "height": 240,
        "brightness": 0.8
    },
    "homeAssistant": {
        "baseURL": "http://homeassistant.local:8123",
        "token": "SomeToken",
        "entities": [{
            "name": "Living Room Lights",
            "entityId": "light.living_room",
            "type": "switch",
            "IntegrationID": 1
        },
        {
            "name": "Dining Room Spot Lights",
            "entityId": "switch.dining_room_spot_lights",
            "type": "switch",
            "IntegrationID": 2
        }
    ]
    },
    "screens":[
        {
            "name": "Home Screen",
            "type": "home",
            "id": "home"
        },
        {
            "name": "Main Menu",
            "parent": "home",
            "type": "menu",
            "id": "menu"
        },
        {
            "name": "Garage Lights",
            "parent": "menu",
            "type": "switch",
            "screenID": 1,
            "IntegrationID": 1
        },
        {
            "name": "External Lights",
            "parent": "menu",
            "type": "switch",
            "screenID": 2,
            "IntegrationID": 2
        }
    ],
    "beeper": {
        "enabled": true,
        "volume": 0.5,
        "default_tone": 440
    }
}