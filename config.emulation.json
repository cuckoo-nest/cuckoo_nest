{
    "app_name": "CuckooNest",
    "version": "1.0.0",
    "debug_mode": true,
    "max_screens": 10,
    "refresh_rate": 60.0,
    "display": {
        "width": 320,
        "height": 240,
        "brightness": 0.8
    },
    "hal": {
        "beeper_device": "/dev/null",
        "display_device": "/dev/fb0",
        "button_device": "/dev/input/by-path/platform-i8042-serio-0-event-kbd",
        "rotary_device": "/dev/input/mice",
        "backlight_device": "/dev/null",
        "backplate_serial_device": "/dev/null",
        "emulate_display": true,
        "backlight_active_seconds": 10,
        "backlight_max_brightness": 115,
        "backlight_min_brightness": 20
    },
    "homeAssistant": {
        "baseURL": "http://homeassistant.local:8123",
        "token": "SomeToken",
        "entities": [{
            "name": "Living Room Lights",
            "entityId": "light.living_room",
            "type": "switch",
            "IntegrationID": 1
        },
        {
            "name": "Dining Room Spot Lights",
            "entityId": "switch.dining_room_spot_lights",
            "type": "switch",
            "IntegrationID": 2
        }
    ]
    },
    "screens":[
        {
            "name": "Home",
            "type": "home",
            "id": 1
        },
        {
            "name": "Menu",
            "type": "menu",
            "id": 2
        },
        {
            "name": "Dimmer",
            "type": "dimmer",
            "id": 3,
            "integration_id": 1
        },
        {
            "name": "Switch",
            "type": "switch",
            "id": 4,
            "integration_id": 2
        }
    ]
}
